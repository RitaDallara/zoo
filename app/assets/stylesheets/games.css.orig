/* game recap style */

.transparent-result 
{
    position: absolute;
    background: rgba(0, 0, 0, 0.08);
    border-radius: 4px;
    width: 400px;
    position: relative;
    margin: 0 auto;
    padding: 20px 20px 20px;
  	
}

