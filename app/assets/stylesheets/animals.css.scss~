

.img-radio > input[type="radio"] {
    display: none;
}


.img-radio input[type=radio] + img{
  cursor:pointer;
  border:2px solid transparent;
}


.img-radio input[type="radio"]:checked + img{
    border:5px solid red;
}

.img-radio img:hover {
  -webkit-transform: scale(1.25);
  -moz-transform: scale(1.25);
  position: relative;
  z-index: 5;
}
