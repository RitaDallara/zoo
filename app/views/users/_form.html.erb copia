<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :max_easy %><br>
    <%= f.number_field :max_easy %>
  </div>
  <div class="field">
    <%= f.label :max_medium %><br>
    <%= f.number_field :max_medium %>
  </div>
  <div class="field">
    <%= f.label :max_hard %><br>
    <%= f.number_field :max_hard %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
