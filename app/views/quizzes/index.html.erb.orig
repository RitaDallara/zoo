<h1 align="center">Listing quizzes</h1>

<table align="center" class="transparent_home" cellspacing="0">
  <thead>

 
    <tr class="legend">
      <th>Animal</th>
      <th>Alternative</th>
      <th>Difficulty</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  </thead>

  <tbody>

<%= button_to 'New Quiz', new_quiz_path, method: :get, class: "start-game-button" %>
    <% @quizzes.each do |quiz| %>
      <tr><td></td></tr>
      <tr>
        <td class="img-quiz"><%= image_tag Animal.find(quiz.animal_id).avatar.url(:thumb) %></td>
        <td class="img-quiz"><%= image_tag Animal.find(quiz.alternative_id).avatar.url(:thumb) %></td>
        <td class="diff" align="center"><%= quiz.difficulty %></td>
        <td class="s-e-d"><%= link_to 'Show ', quiz %></td>
        <td class="s-e-d"><%= link_to 'Edit ', edit_quiz_path(quiz) %></td>
        <td class="s-e-d"><%= link_to 'Destroy ', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

