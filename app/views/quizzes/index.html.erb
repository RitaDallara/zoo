<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Alternative</th>
      <th>Difficulty</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= Animal.find(quiz.animal_id).name %></td>
        <td><%= Animal.find(quiz.alternative_id).name %></td>
        <td><%= quiz.difficulty %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
