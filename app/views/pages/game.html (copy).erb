



<h1>INIZIA LA PARTITA!</h1>
<script type="text/javascript">
   $(document).ready (function() {
          $('#disappear').fadeOut();
                var num= <%= @num_quiz  %>;
                alert(num);
		$.getJSON( "quizzes/prepare_game?num="+num, function( data ) {
		var items = [];
		$.each( data, function( key, val) {
		items.push( "<li id='" + key + "'>" + val + "</li>" );
		});
		$( "<ul/>", {
		"class": "my-new-list",
		html: items.join( "" )
		}).appendTo( "body" );
		});
          //$.getJSON("quizzes
          return false;
        })
</script>
<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Alternative</th>
      <th>Difficulty</th>
    </tr>
  </thead>

  <tbody>
    <% @game_quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.animal_id %></td>
        <td><%= quiz.alternative_id %></td>
        <td><%= quiz.difficulty %></td>
      </tr>
    <% end %>
  </tbody>
</table>
