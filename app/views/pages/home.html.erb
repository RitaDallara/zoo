

<div id="transparent-home" align="center">


<div class="parameters_choice">

    
<form action="pages/game" method="get" id="disappear">

  <p class="legend">How many quizzes do you want to play?</p>
  <p>            
    <input type = "radio" class="home_radio" name = "num" value = "<%= @settings.optone %>" required />
    <label ><%= @settings.optone %></label>

    <input type = "radio" class="home_radio" name = "num" value = "<%= @settings.opttwo %>" required />
    <label ><%= @settings.opttwo %></label>

    <input type = "radio" class="home_radio" name = "num" value = "<%= @settings.optthree %>" required />
    <label ><%= @settings.optthree %></label>
  </p>

  <p class="legend">How much do you know about animals?</p>
  <p>            
    <input type = "radio" class="home_radio" name = "diff" value = "easy" required />
    <label >Animals?</label>

    <input type = "radio" class="home_radio" name = "diff" value = "medium" required />
    <label >I like cats!</label>

    <input type = "radio" class="home_radio" name = "diff" value = "hard" required />
    <label >Roar!</label>
  </p>


  <div>
  <input type="submit" id="start-game-button" value="Start game"/>
  </div>
</form>

</div>
</div>
<%= tweet_button(:via => "indovina_zoo", :url => "http://indovinazoo.com", :text => "I'm playing Indovina Zoo!", :count => "none") %>









